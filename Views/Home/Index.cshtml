@model LivroListViewModel
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>

<Head>
    <title>Biblioteca</title>
    <title>@ViewData["Title"] - Biblioteca</title>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <link rel="stylesheet" type="text/css" href="~/css/site.css">

</Head>


<body>
    <main>
           <!-- Toda a criação do carrossel -->
        <section id="carrossel" class="carrosel">
            <div id="carouselExampleIndicators" class="carousel slide" data-interval="3000" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/imagens-carrossel/imagem-carrossel1.png"
                            class="d-block w-100 imagem-carrossel" alt="...">
                        <div class="carousel-caption d-none d-md-block h-50">
                            <h1 class="font-titulo display-4 cor-especial-dois">
                            </h1>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/imagens-carrossel/imagem-carrossel2.jpeg"
                            class="d-block w-100 imagem-carrossel" alt="...">
                        <div class="carousel-caption d-none d-md-block h-50">
                            <h1 class="font-titulo display-4">Escolha seu livro e viage para outro universo</h1>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>

        <!-- Titulo simples -->
        <section id="titulo">
            <h1 class="text-center font-titulo pt-5 cor-especial">Livros para economizar e se divertir!</h1>
            <p class="text-center text-secondary pb-5">Em nossa loja ajudamos você a encotrar lançamentos e os mais
                renomados livros, escolha seu favorito com maiores descontos e facilidade</p>
        </section>

        <h4 class="ml-5">Livros em destaque!</h4>

        <!-- Listagem dos livros usando cards -->
        <section class="container-fluid bg-light" id="livros">
            <div class="row justify-content-center">

                <!--
                        Cards para listagen de livros
                        Nota: no projeto final tera apenas um container article, onde devera conter 
                        o "for" para listagem dos livros.
                    -->

                <!-- Aqui na teg "article" devera conter o "for" para listagem dos livros-->
                
                </article>
               <div class="row justify-content-center">
                @foreach (var livro in Model.Livro)
                    {
                        @Html.Partial("LivroResumo", livro)                      
                    }
            </div>
        </section>

    </main>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
</body>

</html>