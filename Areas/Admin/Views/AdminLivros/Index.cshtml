@model ReflectionIT.Mvc.Paging.PagingList<projeto_livraria.Models.Livro>

@{
    ViewData["Title"] = "Index";
}

<h3>Livros</h3>

<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
    </button>
</form>

Total de Livros : @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>
<p>
    <a asp-action="Create">Adicionar novo Livros</a>
</p>
<div class="row">
    <div class="col-md-10">
        <table class="table">
             <thead>
                <tr>
                    <th>
                        @* @Html.SortableHeaderFor(model => model.Nome, "Nome") *@
                        @*@Html.DisplayNameFor(model => model.Nome)*@
                    </th>
                    @* <th>
                        @Html.DisplayNameFor(model => model.DescricaoCurta)
                    </th> *@
                    @* <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th> *@
                    @* <th>
                        @Html.DisplayNameFor(model => model.IsLanchePreferido)
                    </th> *@
                    @* <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th> *@
                    <th></th>
                </tr>
            </thead> 
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        @* <td>
                            @Html.DisplayFor(modelItem => item.IsLanchePreferido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                        </td> *@
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdLivro">Edita</a> |
                            <a asp-action="Details" asp-route-id="@item.IdLivro">Detalhes</a> |
                            <a asp-action="Delete" asp-route-id="@item.IdLivro">Deleta</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div>
            <vc:pager paging-list="@Model"></vc:pager>
        </div>

    </div>
</div>